<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>AddPlanController</servlet-name>
        <servlet-class>controller.AddPlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPlanHeaderController</servlet-name>
        <servlet-class>controller.AddPlanHeaderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlanHeaderController</servlet-name>
        <servlet-class>controller.PlanHeaderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPlanController</servlet-name>
        <servlet-class>controller.EditPlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePlanController</servlet-name>
        <servlet-class>controller.DeletePlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WorkerAssignmentController</servlet-name>
        <servlet-class>controller.WorkerAssignmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignWorkerController</servlet-name>
        <servlet-class>controller.AssignWorkerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeController</servlet-name>
        <servlet-class>controller.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPlanController</servlet-name>
        <url-pattern>/addPlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPlanHeaderController</servlet-name>
        <url-pattern>/addPlanHeader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlanHeaderController</servlet-name>
        <url-pattern>/planHeader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPlanController</servlet-name>
        <url-pattern>/editPlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePlanController</servlet-name>
        <url-pattern>/deletePlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WorkerAssignmentController</servlet-name>
        <url-pattern>/workerAssignment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignWorkerController</servlet-name>
        <url-pattern>/assignWorker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeController</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagePlanController</servlet-name>
        <servlet-class>controller.ManagePlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagePlanController</servlet-name>
        <url-pattern>/managePlan</url-pattern>
    </servlet-mapping>
</web-app>
